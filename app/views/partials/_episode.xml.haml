%item
	%title="#{episode.show.name} #{episode.number_and_part}: #{episode.title}"
	%itunes:author=episode.hosts.map { |host| host.name }.to_sentence
	%itunes:subtitle=episode.subtitle
	%description=episode.description
	%itunes:summary=episode.description
	%itunes:image{ :href => episode.show.image_full_url(request.host) }
	%enclosure{ :url => episode.media, :length => 100, :type => 'audio/x-m4a' }
	%content:encoded=episode.notes
	%link="http://#{request.host}#{show_episode_path(episode.show, episode)}"
	%guid="http://#{request.host}#{show_episode_path(episode.show, episode)}"
	%pubdate=episode.created_at
	%itunes:duration 8:00