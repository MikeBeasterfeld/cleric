.jumbotron
	.row
		.col-md-4.text-center=image_tag(@show.icon, :width => 260, :height => 260, :class => 'img-rounded')
		.col-md-8
			%h2=link_to @show.name, show_path(@show)

			%p.lead=@show.description

			%p.lead	Hosted by #{@show.hosts.map { |host| link_to host.name, user_path(host) }.to_sentence}.
