= simple_form_for [@episode.show, @episode] do |f|
  - if @episode.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rss_feed.errors.count, "error")} prohibited this rss_feed from being saved:"
      %ul
        - @episode.errors.full_messages.each do |msg|
          %li= msg
  =f.input :title
  =f.input :subtitle
  =f.input :number
  =f.input :part
  =f.input :slug
  =f.input :description, :input_html => {:rows => 20, :cols => 150}, as: :bootsy
  =f.input :uploaded_image, as: :image_preview, input_html: {preview_version: :thumb}
  =f.input :notes
  =f.input :media
  =f.input :live
  =f.input :preview
  =f.association :show
  =f.association :hosts
  =f.association :guests

  =f.button :submit

