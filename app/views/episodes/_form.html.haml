= form_for @episode do |f|
  - if @episode.errors.any?
    #error_explanation
      %h2= "#{pluralize(@episode.errors.count, "error")} prohibited this episode from being saved:"
      %ul
        - @episode.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :part
    = f.number_field :part
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :media
    = f.text_field :media
  .actions
    = f.submit 'Save'
