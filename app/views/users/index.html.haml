%h1 People

%p=link_to 'Invite a new user', new_user_invitation_path if current_user.try('admin?')

.row
  .col-md-12
    .panel.panel-default
      .panel-body
        .row
          -@users.each do |user|
            .col-md-3
              .center-block.text-center{ :style => 'padding-bottom: 30px'}
                =link_to image_tag(user.user_icon, :width => 130, :height => 130, :class => 'img-rounded'), [user]
                %br
                %small=link_to user.name, [user]

-if !@hidden_users.nil?
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          Hidden users
        .panel-body
          .row
            -@hidden_users.each do |user|
              .col-md-3
                .center-block.text-center{ :style => 'padding-bottom: 30px'}
                  =link_to image_tag(user.user_icon, :width => 130, :height => 130, :class => 'img-rounded'), [user]
                  %br
                  %small=link_to user.name, [user]
