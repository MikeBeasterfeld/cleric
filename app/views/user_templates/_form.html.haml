=simple_form_for(@user_template) do |f|
  =f.error_notification

  .form-inputs
    .row
      .col-md-3
        =f.input :name
        =f.input :area, :collection => UserTemplate.areas
    .row#contentrow
      .col-md-12
        =f.input :content
    .row
      .col-md-12
        #content_errors.alert.alert-danger{:role => 'alert', :style => "height: 55px; max-height: 55px; overflow-y: scroll"} No errors in content
    .row
      .col-md-1
        ="Content"
      .col-md-11
        #editor{:style => 'width: 100%; height: 300px'}

  .form-actions
    .row{:style => 'padding-top: 15px'}
      .col-md-12
        =f.button :submit

.row
  .col-md-12
    %h3 Preview
.row
  .col-md-12
    #content_preview

