!!! 
%html{ :lang => 'en' }
	%head
		%meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1' }
		%title Cleric
		=stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
		=javascript_include_tag "application", "data-turbolinks-track" => true
		=csrf_meta_tags
	%body
		.navbar.navbar-static-top{:role => 'navigation' }
			.container
				.navbar-header
					=link_to "Home", root_url, :class => 'navbar-brand'
				.collapse.navbar-collapse
					%ul.nav.navbar-nav
						%li
							=link_to "Sign out", destroy_user_session_path, :method => :delete if user_signed_in?
						%li
							=link_to "Sign in", new_user_session_path if !user_signed_in?
						%li
							=link_to "Admin", rails_admin.dashboard_path if current_user.admin?
		.container
			.cleric-content
				.row
					.col-md-12=notice
				.row
					.col-md--12=alert
				=yield
			=debug(current_user) if Rails.env.development?